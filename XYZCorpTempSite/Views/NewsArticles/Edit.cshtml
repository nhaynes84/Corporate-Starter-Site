@using XYZCorpTempSite.Models
@model XYZCorpTempSite.Models.NewsEditorModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @Html.ActionLink("XYZCorp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>NewsArticle</h4>
            <hr />
            <input type="hidden" name="NewsArticleId" value="@(((NewsArticle)Model.SelectedArticle).NewsArticleId)" />

            <div class="form-group">
                <label>Header</label>
                <div class="col-md-10">
                    <input name="Header" value="@(Model.SelectedArticle.Header)" />
                </div>
            </div>
    
            <div class="form-group">
                <label>Content</label>
                <div class="col-md-10">
                    @Html.Raw(Model.Editor.MvcGetString())
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.SelectedArticle.IsFeatured, htmlAttributes: 
                new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.SelectedArticle.IsFeatured, new {@Name = "IsFeatured"})
                    @*<input type="checkbox" name="IsFeatured" @(Model.SelectedArticle.IsFeatured ? "checked" : string.Empty)/>*@
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
